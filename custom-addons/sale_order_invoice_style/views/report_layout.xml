<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_external_layout" inherit_id="web.external_layout_standard" name="Custom SW Header">

        <xpath expr="//div[contains(@t-attf-class, 'header o_company_')]" position="replace">
            <div class="header" style="padding: 0; text-align: center;">
                <table style="width: 100%; border-collapse: collapse; margin: 0 auto;">
                    <tr>
                        <td style="width: 100px; vertical-align: middle;">
                            <!-- Left Logo -->
                            <div t-att-style="'width:100px; height:100px; background-image: url(' + image_data_uri(company.logo) + '); background-size: contain; background-repeat: no-repeat; background-position: center; display: inline-block;'"></div>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <!-- Center Title -->
                            <div style="display: inline-block; text-align: center;">
                                <div style="font-size:13px; color:#555; font-weight:normal; line-height: 1;">
                                    ሲምፕል ዌይ ግሎባል አስማች እና ላክ
                                </div>
                                <div style="font-size:22px; font-weight:bold; color:#007bff; line-height: 1;">
                                    SIMPLE WAY GLOBAL IMPORT &amp; EXPORT
                                </div>
                            </div>
                        </td>
                        <td style="width: 100px; vertical-align: middle;">
                            <!-- Right Logo -->
                            <div t-att-style="'width:100px; height:100px; background-image: url(' + image_data_uri(company.logo) + '); background-size: contain; background-repeat: no-repeat; background-position: center; display: inline-block;'"></div>
                        </td>
                    </tr>
                </table>
                <div style="border-bottom:3px solid #007bff; margin-top:15px;"></div>
            </div>
        </xpath>

        <!-- Replace the footer section -->
        <xpath expr="//div[contains(@t-attf-class, 'footer o_company_')]" position="replace">
            <div class="custom_footer text-center" style="border-top: 1px solid black; padding-top: 10px;">
                <!-- Company Name and Page Number -->
                <div class="row">
                    <div class="col-12">
                        <strong>
                            <t t-if="company and company.name">
                                <t t-esc="company.name"/>
                            </t>
                            <t t-else="">
                                SIMPLE WAY GLOBAL IMPORT &amp; EXPORT
                            </t>
                        </strong>
                        <p>Page:
                            <span class="page"/>
                            /
                            <span class="topage"/>
                        </p>
                    </div>
                </div>
                <!-- Company Address -->
                <div class="row">
                    <div class="col-12">
                        <p>ALEM GEBRE BUILDING 08 FLOOR GERJI MEBRATHAILE, ADDIS ABEBA, ETHIOPIA</p>
                        <p>TEL: +251911640551 / +251900505599</p>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
